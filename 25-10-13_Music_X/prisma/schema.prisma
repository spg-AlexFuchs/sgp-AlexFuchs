datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "client"
    runtime  = "deno"
}

model Song {
id      String @id @default(cuid())
name    String
album   Album @relation(fields: [albumId], references: [id])
albumId String
artists Artist[] 
dauer   Float
genre   Genre @relation(fields: [genreId], references: [id])
genreId String
}

model Artist{
id      String @id @default(cuid())
name    String
album   Album[]
songs Song[] 
}

model Album{
id      String @id @default(cuid())
name    String
erscheinungsjahr DateTime
artists Artist[] 
songs Song[] 
}

model Genre{
id      String @id @default(cuid())
name    String
songs Song[]   
}