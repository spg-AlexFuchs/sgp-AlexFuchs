datasource db {
    provider = "sqlite"
    url      = "file:./dev.sqlite3"
}

generator client {
    provider = "prisma-client-js"
}

model Zoo{
    id Int @id @default(autoincrement())
    land String
    stadt String
    adresse String
    baujahr Int
    abteilungen Abteilung[]
}

model Abteilung{
    id Int @id @default(autoincrement())
    name String
    mitarbeiter Mitarbeiter[]
    tiere Tier[]
    zoo Zoo[]

}

model Tier{
    id Int @id @default(autoincrement())
    name String
    art String
    abteilung Abteilung[]
}

model Mitarbeiter{
    id Int @id @default(autoincrement())
    name String
    abteilungen Abteilung[]
}